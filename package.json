{
  "name": "rollup-license-plugin",
  "version": "3.0.0",
  "type": "module",
  "description": "Extracts OSS license information of the npm packages in your rollup or vite output",
  "keywords": [
    "rollup",
    "vite",
    "build",
    "artifact",
    "oss",
    "open source",
    "compliance",
    "copyright",
    "license",
    "licence",
    "licenses",
    "licences",
    "scan",
    "scanner",
    "bom",
    "bill of materials",
    "plugin"
  ],
  "main": "./dist/index.js",
  "author": "Christoph Werner <christoph@codepunkt.de>",
  "repository": {
    "type": "git",
    "url": "https://github.com/codepunkt/rollup-license-plugin"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "prebuild": "node -e \"fs.rmSync('dist', { force: true, recursive: true })\"",
    "build": "tsup src/index.ts",
    "typescript": "tsc",
    "prepublishOnly": "npm run build",
    "test": "NODE_OPTIONS='--no-warnings --loader=@esbuild-kit/esm-loader' c8 ava --serial",
    "update-test-snapshot": "NODE_OPTIONS='--no-warnings --loader=@esbuild-kit/esm-loader' c8 ava --update-snapshots --serial"
  },
  "dependencies": {
    "get-npm-tarball-url": "^2.1.0",
    "node-fetch": "^3.3.2",
    "spdx-expression-validate": "^2.0.0"
  },
  "devDependencies": {
    "@esbuild-kit/esm-loader": "^2.6.5",
    "@types/node": "^20.11.5",
    "ava": "^6.0.1",
    "c8": "^9.1.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "rollup": "^4.9.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.11"
  },
  "lint-staged": {
    "*.{ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "c8": {
    "reporter": [
      "text",
      "cobertura"
    ]
  }
}
